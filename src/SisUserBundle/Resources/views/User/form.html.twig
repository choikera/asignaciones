{% extends 'layout.html.twig' %}
{% block body %}
{{ parent() }}
<div class="main container">
	 <div class="row well" 
		<div class="col-md-6">
			<div class="page-header margin-none">
				<h2 class="padding-none">New User</h2>
			</div>
			{{ form_start(form) }}
			<div class="form-group">
				{{ form_label(form.userName) }}
				{{ form_widget(form.userName,{'attr' : {
				    'class' : 'form-control',
				    'placeholder' :'Nombre Usuario'} })
				}}
				<span class="text-danger">{{ form_errors(form.userName) }}</span>
				{{ form_label(form.firstName) }}
				{{ form_widget(form.firstName,{'attr' : {
				    'class' : 'form-control',
				    'placeholder' :'Nombre'} })
				}}
				<div class="checkbox">
					<label>
						{{ form_widget(form.isActive) }} Active
					</label>
				</div>
			</div>
			<p>
		      {{ form_widget(form.save, {'label' : 'Create user', 'attr': {'class': 'btn btn-success'}}) }} </p>                	
			{{ form_end(form) }}
	  </div>
</div>	
{% endblock %}